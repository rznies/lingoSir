# Lingo.dev API Key
# Get your API key from: https://lingo.dev/dashboard
LINGODOTDEV_API_KEY=your_api_key_here

# Server Configuration
PORT=3001

# Translation Mode
# Options:
#   - "sdk" (default): Use Lingo.dev SDK only
#   - "cli": Use Lingo CLI only (requires npx lingo.dev@latest to be available)
#   - "hybrid": Try CLI first, fallback to SDK if CLI fails
TRANSLATION_MODE=hybrid

# CLI Configuration (only used when TRANSLATION_MODE is "cli" or "hybrid")
# Number of languages to translate concurrently in each batch
CLI_BATCH_SIZE=3

# Enable concurrent CLI processes (set to "false" for sequential processing)
CLI_CONCURRENT=true
